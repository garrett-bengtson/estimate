<html t:type="layout" title="Add Hours"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
      
	<t:form t:id="hoursForm" >
      	<t:errors/>
      	<t:label for="timestamp" />
      	<span class="input-group-text" title="Planned end date">
              <i class="fa fa-calendar"></i>
        </span>            
        <input t:id="timestamp" type="text" class="form-control" placeholder="Showing all dates" readonly="readonly"/>
      	<t:label for="hoursLogged" />
      	<t:textField t:id="hoursLogged" value="hour.hoursLogged" />
      	<t:submit value="Add Hours" />
	    <t:pagelink page="tasks/EditTask" class="btn btn-default">Cancel</t:pagelink>
     </t:form>
      
</html>